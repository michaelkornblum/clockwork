header
  background #800
  display flex
  flex-direction column
  +above(960px)
    flex-direction row
    justify-content space-between

.banner
  display flex
  justify-content space-between
  padding 1em 0
  +above(660px)
    justify-content: center
  +above(960px)
    justify-content flex-start
  .logo
    display inherit
    height 2em
    fill white
    position relative
    left -1em
    top -1%
    +above(660px)
      left 0
    +above(960px)
      left -2em


  .menu-link
    font-size 1.1em
    color white
    padding .5em
    background #333
    border 1px solid white
    text-decoration none
    font-family arial
    position relative
    left -1em
    +above(660px)
      display none
      visibility hidden
    &:hover, &:focus
      background #fff
      color #800
nav
  position fixed
  width: 100%
  height: 100%
  top 4.5em
  right -100%
  transition right 0.6s ease
  &.open
    right 0
  +above(660px)
    position static
    width inherit
    height inherit
    top 0
  +above(960px)
    position relative
    right 1.5em

.nav-list
  display flex
  flex-direction column
  list-style-type none
  background #333
  +above(668px)
    flex-direction row
    justify-content: space-around
  .nav-list__item
    display flex
    flex-direction column
    justify-content center
  .nav-list__link
    text-decoration none
    color white
    font-family arial
    font-size 1.25em
    padding 1em .6em
    border-bottom 1px solid white
    background-color #333
    transition background .75s ease
    transition color .75s ease
    +above(668px)
      border none
    +above(960px)
      background #800
      color white
    &:hover, &:focus
      background white
      color #800
      border-left 2px solid #333
