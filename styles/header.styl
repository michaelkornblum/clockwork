header
  background #800
  display flex
  flex-direction column
  +above(960px)
    flex-direction row
    justify-content space-between
    height 4.5em

.banner
  display flex
  justify-content space-between
  padding 1em 0
  +above(560px)
    justify-content: center
  +above(960px)
    justify-content flex-start
  .logo
    display inherit
    height 1.75em
    fill white
    position relative
    top .2em
    left -2em
    +above(360px)
      left: -3.5em
    +above(560px)
      height 2.5em
      left 0
      top -.25em
    +above(960px)
      height 2.5em
      left -1.5em


  .menu-link
    font-size 1.1em
    color white
    padding .5em
    background #333
    border 1px solid white
    text-decoration none
    font-family arial
    position relative
    left -1em
    +above(560px)
      display none
      visibility hidden
    &:hover, &:focus
      background #fff
      color #800
nav
  position fixed
  width: 100vw
  height: 100vh
  top 4.5em
  right -100%
  transition right 0.6s ease
  z-index 2
  &.open
    right 0%
  +above(560px)
    position static
    width inherit
    height inherit
    top 0
  +above(960px)
    position relative
    right 1.5em

.nav-list
  display flex
  flex-direction column
  list-style-type none
  background #333
  height 100%
  +above(560px)
    flex-direction row
    justify-content: space-around
    height inherit
  +above(960px)
    position relative
    top -.6em
    background #800
  .nav-list__item
    display flex
    flex-direction column
    justify-content center
  .nav-list__link
    text-decoration none
    color white
    font-family arial
    font-size 1.25em
    padding .9em .6em
    border-bottom 1px solid white
    background-color #333
    transition background .75s ease
    transition color .75s ease
    +above(560px)
      border none
    +above(960px)
      background #800
      color white
      position relative
      top .5em
      padding .75em
    &:hover, &:focus
      background white
      color #800
